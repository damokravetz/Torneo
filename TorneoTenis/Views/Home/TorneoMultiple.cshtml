                $('#ptje1').val('');
            }
        });
        $('#ptje2').on('keypress keydown keyup', function () {
            if (!$('#ptje2').val().match($regexptje) && $('#ptje2').val().length < 20) {

            } else {
                $('#ptje2').val('');
            }
        });
    });
</script>
