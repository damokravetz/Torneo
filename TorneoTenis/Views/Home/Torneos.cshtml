@model List<TorneoTenis.Models.Torneo>
@{
    ViewBag.Title = "Torneos";
}

<div>
    @{
        foreach (TorneoTenis.Models.Torneo t in Model)
        {
    <div class="divtorneo0">
        <h1>@t.nombre</h1>
        <p class="lead">@t.cantjdrs jugadores/equipos</p>
        <button class="btn btn-primary btn-lg" onclick="location.href = '/Home/TorneoMultiple/'+@t.Id" value="@t.nombre" name="nombre">Abrir</button>
        <button class="btn btn-primary btn-danger" onclick="location.href = '/Home/eliminarTorneo/'+@t.Id" value="@t.nombre" name="nombre">Eliminar</button>
    </div>
        };
    }
    <div class="divtorneo0">
        <p><button type="submit" onclick="location.href='/Home/AgregarTorneo'" name="btnaddtorneo" class="btn btn-primary btn-lg">Agregar Torneo</button></p>
    </div>
</div>

